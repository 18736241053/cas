<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN" "http://tiles.apache.org/dtds/tiles-config_2_1.dtd">
<tiles-definitions>
    <definition name="org.jasig.cas.errors.base" template="/WEB-INF/view/jsp/default/ui/base.jsp">
        <put-attribute name="content" value="/WEB-INF/view/jsp/default/ui/errors.jsp" />
    </definition>

    <definition name="org.jasig.cas.errors.404" extends="org.jasig.cas.errors.base">
        <put-attribute name="title.code" value="org.jasig.cas.errors.404.title.code" cascade="true" />
        <put-attribute name="header.value" value="File Not Found" cascade="true" />
        <put-attribute name="body.value" value="The page you were attempting to access could not be found." cascade="true" />
    </definition>

  <definition name="org.jasig.cas.errors.500" extends="org.jasig.cas.errors.base">
        <put-attribute name="title.code" value="org.jasig.cas.errors.500.title.code" cascade="true" />
        <put-attribute name="header.value" value="CAS is Unavailable" cascade="true" />
        <put-attribute name="body.value" value="There was an error trying to complete your request.  Please notify your support desk or try again." cascade="true" />
    </definition>

    <definition name="org.jasig.cas.errors.authorization" extends="org.jasig.cas.errors.base">
        <put-attribute name="title.code" value="org.jasig.cas.errors.authorization.title.code" cascade="true" />
        <put-attribute name="header.value" value="Authorization Failure" cascade="true" />
        <put-attribute name="body.value" value="You are not authorized to use this application." cascade="true" />
    </definition>
</tiles-definitions>